<?xml version="1.0" encoding="utf-8"?>
<!--the cell for the recruiter recycler view on the feeds fragment-->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@color/colorAccent"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Sanay Dev"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/single_recruiter_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="sanny.sanay@gmail.com"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:id="@+id/single_recruiter_email"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="9471192140"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/nunito_semibold"
                android:id="@+id/single_recruiter_phone"/>


        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
