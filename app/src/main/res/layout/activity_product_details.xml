<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_toolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by "
            android:textSize="20sp"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/pd_seller_name"
            />
        <RatingBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            style="@android:style/Widget.Holo.RatingBar.Small"
            android:layout_gravity="center_vertical"
            android:id="@+id/pd_rating"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="( 200 )"
            android:gravity="center_horizontal"
            android:id="@+id/pd_rating_no"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/pd_image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Silk"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:maxLines="3"
        android:id="@+id/pd_item_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="at"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#a70500"
        android:textStyle="bold"
        android:text="Rs. 200"

        android:gravity="center_horizontal"
        android:maxLines="3"
        android:id="@+id/pd_item_price"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity Available: "
        android:textSize="15sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="15sp"
            android:id="@+id/pd_item_qty"
            />
    </LinearLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="25sp"
       android:text="About this Item"
       android:layout_marginLeft="20dp"
       android:textStyle="bold"
       android:layout_marginTop="20dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product is very good"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/pd_item_description"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Contact Seller"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Call Seller"
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Seller"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>