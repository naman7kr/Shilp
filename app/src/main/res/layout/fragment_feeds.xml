<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/feeds_topcategories_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/feeds_topcategories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Top Categories"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="2"/>
                <Button
                    android:id="@+id/feeds_topcategories_seeall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"
                    android:text="See all"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/feeds_topcategories_recycler"
                android:layout_width="match_parent"
                android:layout_height="180dp">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/viewcolor"
            />
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/feeds_topproducts_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/feeds_topproducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Top Products"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="2"/>
                <Button
                    android:id="@+id/feeds_topproducts_seeall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"
                    android:text="See all"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_launcher_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_launcher_background"/>

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_launcher_background"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/viewcolor"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/feeds_topworkers_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/feeds_topworkers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="8dp"
                    android:text="Top Workers"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/feeds_topworkers_seeall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/feeds_topworkers_recycler"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:padding="8dp"
                android:layout_marginBottom="32dp">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/viewcolor"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/feeds_toprecruiters_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/feeds_toprecruiters"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="8dp"
                    android:text="Top Workers"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/feeds_toprecruiters_seeall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="See all"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/feeds_toprecruiters_recycler"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:padding="8dp"
                android:layout_marginBottom="32dp">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
